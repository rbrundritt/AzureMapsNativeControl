<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AzureMapsMauiSamples.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25" VerticalOptions="Center">
            <Image
                Source="azure_maps_shadow_logo.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="Azure Maps logo, with a shadow" />

            <Label
                Text="Azure Maps Native control"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="Welcome to the MAUI samples"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to the Azure Maps dot net Multi platform App U I" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
