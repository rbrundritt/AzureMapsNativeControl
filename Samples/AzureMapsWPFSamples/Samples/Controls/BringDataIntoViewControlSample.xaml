<Page x:Class="AzureMapsWPFSamples.Samples.BringDataIntoViewControlSample"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AzureMapsWPFSamples.Samples"
      xmlns:atlas="clr-namespace:AzureMapsNativeControl;assembly=AzureMapsNativeControl"             
      xmlns:atlasControl="clr-namespace:AzureMapsNativeControl.Control;assembly=AzureMapsNativeControl"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Bring Data Into View Control Sample">

    <atlas:Map x:Name="MyMap" OnReady="MyMap_OnReady">

        <!-- Add the control to the map. -->
        <atlas:Map.Controls>
            <atlasControl:BringDataIntoViewControl Position="TopRight" />
        </atlas:Map.Controls>
    </atlas:Map>
</Page>
