<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:atlas="clr-namespace:AzureMapsNativeControl;assembly=AzureMapsNativeControl" 
             x:Class="AzureMapsMauiSamples.Samples.MorphShapeAnimationSample"
             Title="MorphShapeAnimationSample">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <FlexLayout Direction="Row" Margin="10" Wrap="Wrap">
            <Button Text="Play" Clicked="PlayButton_Clicked"/>
            <Button Text="Stop" Clicked="StopButton_Clicked" Margin="5,0"/>
        </FlexLayout>

        <atlas:Map x:Name="MyMap" Grid.Row="1" OnReady="MyMap_OnReady"/>
    </Grid>
</ContentPage>